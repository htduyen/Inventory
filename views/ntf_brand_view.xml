<?xml version="1.0"?>
<odoo>

  <record id="ntf_view_tree_brand" model="ir.ui.view">
      <field name="name">Brand Tree Ntf_food</field>
      <field name="model">ntf.brand</field>
      <field name="arch" type="xml">
          <tree string="Tree view">
              <field name="name"/>
              <field name="create_date"/>
              <field name="create_uid" />
          </tree>
      </field>
  </record>

  <record id="ntf_view_form_brand" model="ir.ui.view">
    <field name="name">Brand Form ntf-food</field>
    <field name="model">ntf.brand</field>
    <field name="arch" type="xml">
        <form>
          <group>

              <group>
                  <field name="name" />
                  <field name="descr"></field>
              </group>

              <group>
                  <field name="image" widget="image" nolabel="1" class = "oe_avatar"></field>
              </group>

          </group>

      </form>
    </field>
  </record>
</odoo>